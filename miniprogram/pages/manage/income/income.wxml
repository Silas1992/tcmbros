<!--miniprogram/pages/manage/income/income.wxml-->
<wxs module="filter" src="../../../util/filter.wxs"></wxs>
<scroll-view scroll-y class="DrawerPage {{modalName=='viewModal'?'show':''}}">
	<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}"><view slot="backText">返回</view>
		<view slot="content">收入明细</view>
	</cu-custom>			
	<view style="margin-top:90rpx" class='padding margin text-center'>
		<view wx:if="{{newRecord[0].subList[0].date_total !== 0}}" class="padding-xl radius shadow bg-blue margin-top">
			今日收益：{{filter.toFix(newRecord[0].subList[0].date_total)}}元
		</view>
		<view wx:else class="padding-xl radius shadow bg-blue margin-top">
			今日收益空空，赶快努力赚钱！
		</view>
	</view>
	<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
		<view class="cu-item arrow" wx:for="{{newRecord}}" wx:key="index">
			<view class="content" bindtap="showModal" data-i="{{index}}" data-target="viewModal">
				<text class="cuIcon-github text-grey"></text>
				<text class="text-grey">{{item.year}}-{{item.month}}</text>
				<text class="text-grey" style="margin-left:300rpx">{{filter.toFix(item.total)}}</text>
			</view>
		</view>
	</view>
	
</scroll-view>
<view class="DrawerClose {{modalName=='viewModal'?'show':''}}" bindtap="hideModal">
	<text class="cuIcon-pullright"></text>
</view>
<scroll-view scroll-y class="DrawerWindow {{modalName=='viewModal'?'show':''}}">
	<view style="margin-top:150rpx" class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
		<view class="cu-item arrow" wx:for="{{selectedMonthRecord}}" 
		wx:key="index" wx:for-item="newItem">
			<view class="content">
				<text class="cuIcon-github text-grey"></text>
				<text wx:if="{{newItem.date>=10}}" class="text-grey">{{currentMonth}}月{{newItem.date}}日</text>
				<text wx:else class="text-grey">{{currentMonth}}月0{{newItem.date}}日</text>
				<text class="text-grey" style="margin-left:180rpx">{{filter.toFix(newItem.date_total)}}</text>
			</view>
		</view>
	</view>
</scroll-view>