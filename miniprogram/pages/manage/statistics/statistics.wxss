/* miniprogram/pages/manage/statistics/statistics.wxss */
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.select-time{
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}
.select-time .first-line{
  align-self: center;
  width: 60%;
  height: 46rpx;
  display: flex;
  justify-content: space-between;
}
.select-time .first-line .item-no{
  height: 46rpx;
  padding:0 26rpx 0 26rpx;
  border: 1rpx solid cadetblue;
  border-radius: 23rpx;
  color: cadetblue;
  font-size: 26rpx;
}
.select-time .first-line .item{
  height: 46rpx;
  padding:0 26rpx 0 26rpx;
  border-radius: 23rpx;
  color: white;
  background-color: #1aad19;
  font-size: 26rpx;
}
.select-time .second-line{
  margin-top: 30rpx;
  height: 40rpx;
  display: flex;
  width: 50%;
  justify-content: space-between;
  align-self: center;
  font-size: 28rpx;
}
.select-time .second-line .start{
  display: flex;
}
.select-time .second-line .start .img{
  margin-top: 19rpx;
  height: 15rpx;
  width: 20rpx;
  margin-left: 10rpx;
}
.wrapper{
  flex:1;
  overflow: hidden;
}
.food-data{
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.food-data .tt{
  background-color: white;
  font-size: 32rpx;
  padding-left: 20rpx;
  font-weight: 600;
  height: 100rpx;
  line-height: 100rpx;
}
.food-data .countNum{
  height: 80rpx;
  width: 100%;
  display: flex;
  background-color: #f5f5f5;
  justify-content: space-around;
}
.food-data .countNum-first{
  height: 80rpx;
  width: 100%;
  background-color: #fefefe;
  display: flex;
  justify-content: space-around;
}
.food-data .row{
  color: #888;
  line-height: 80rpx;
  width: 260rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
}
.food-data .row-1{
  line-height: 80rpx;
  width: 260rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
}