<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">申请补助</view>
</cu-custom>
<view class="ad_popError" wx:if="{{popErrorMsg}}">{{popErrorMsg}}</view>
<form catchsubmit="formSubmit">
  <view class="cu-form-group margin-top" style="margin-top:100rpx">
		<view class="title">补助金额</view>
		<input name="money" value="" placeholder="填写金额"></input>
  </view>
  <view class="cu-form-group margin-top">
		<view class="title">补助类型</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'请选择补助类型'}}
			</view>
		</picker>
  </view>
  <view class="cu-form-group align-start">
		<view class="title">补助备注</view>
    <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" 
    placeholder="请输入至少5个字(例如：1.今天没做饭 2.超过20:30分每次补助10元 3.今天本身休息加班 4.获得锦旗奖)"></textarea>
  </view>
  
  <view class="padding flex flex-direction">
    <button form-type="submit" class="cu-btn bg-green margin-tb-sm lg">提交申请</button>
  </view>
</form>
