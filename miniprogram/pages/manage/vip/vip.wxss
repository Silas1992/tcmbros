/* miniprogram/pages/person/personInfo/personInfo.wxss */

.item{
  align-self:center;
  width: 95%;
  background-color: #fff;
  margin-top: 20rpx;
}
.line .imgs{
  width: 40rpx;
  height: 40rpx;
  align-self: center;
  margin-left: 20rpx;
}

.line .manage{
  position: absolute;
  right: 40rpx;
  align-self: center;
  display: flex;
}

.item .line .image{
  align-self: center;
  margin-left: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
}
.top{
  height: 120rpx;
  display: flex;
  position: relative;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}
.line{
  height: 120rpx;
  display: flex;
  position: relative;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.item .line .t1{
  line-height: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #888888;
  margin-left: 20rpx;
  width: 120rpx;
  align-self: center;
}

.item .line .t2{
  align-self: center;
  line-height: 100rpx;
  font-size: 20rpx;
  margin-left: 20rpx;
}

.line .t3{
  height: 30rpx;
  width: 50rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: goldenrod;
  align-self: center;
  line-height: 30rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  border-radius: 5rpx;
}

.item .line .option{
  align-self: center;
  height: 80rpx;
  display: flex;
  position: absolute;
  right: 20rpx;
  text-align: center;
}

.item .line .option .ss{
  align-self: center;
  height: 58rpx;
  width: 120rpx;
  margin-right: 50rpx;
  border-bottom:1rpx solid green
}
.item .line .option .btn{
  align-self: center;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
}