
.head{
  width: 100vw;
  display: flex;
  align-content: center;
  justify-content: center;
  flex-direction: column;
}
.head .image{
  width: 96%;
  border-radius: 15rpx;
  align-self: center;
}
.head .update-time{
  margin-top: -60rpx;
  font-size: 26rpx;
  color: #fff;
  align-self: center;
}
.body{
  width: 100vw;
  display: flex;
  align-content: center;
  justify-content: center;
  flex-direction: column;
}
.body .upgrade{
  margin-top: 50rpx;
  width: 92%;
  align-self: center;
}
.body .upgrade .title{
  font-size: 28rpx;
  font-weight: bold;
}
.body .upgrade .progress{
  float: left;
  margin-top: 20rpx;
  height: 790rpx;
  width: 60rpx;
  display: flex;
  flex-direction: column;
}
.body .upgrade .progress .line{
  align-self: center;
  display: flex;
  flex-direction: column;
}

.body .upgrade .progress .circle-1{
  width: 20rpx;
  height: 20rpx;
  background-color: rgb(191, 191, 191);
  border-radius: 50%;
  align-self: center;
}

.body .upgrade .progress .circle-2{
  align-self: center;
  width: 20rpx;
  height: 20rpx;
  background-color: goldenrod;
  border-radius: 50%;
}

.body .upgrade .progress .gray{
  align-self: center;
  width: 6rpx;
  height: 200rpx;
  background-color: rgb(191, 191, 191);
}
.body .upgrade .progress .gray .colours{
  background-color: goldenrod;
}

.body .upgrade .text{
  width: 400rpx;
  margin-top: 20rpx;
  margin-left: 80rpx;
  height: 790rpx;
  display: flex;
  flex-direction: column;
}
.body .upgrade .text .item{
  height: 100rpx;
  display: flex;
  margin-top: -10rpx;
  flex-direction: column;
  justify-content: space-between;
}
.body .upgrade .text .item1{
  height: 100rpx;
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.body .upgrade .text .item .level-name-1{
  font-size: 28rpx;
  font-weight: bold;
}
.body .upgrade .text .item .level-name-2{
  font-size: 28rpx;
  font-weight: bold;
  color: goldenrod;
}
.body .upgrade .text .item .rewards{
  font-size: 26rpx;
  color: #888;
}

.body .upgrade .text .item1 .level-name-1{
  font-size: 28rpx;
  font-weight: bold;
}
.body .upgrade .text .item1 .level-name-2{
  font-size: 28rpx;
  font-weight: bold;
  color: goldenrod;
}
.body .upgrade .text .item1 .rewards{
  font-size: 26rpx;
  color: #888;
}

.body .rule{
  width: 92%;
  align-self: center;
  height: 400rpx;
}
.body .rule .title{
  font-size: 28rpx;
  font-weight: bold;

}
.body .rule .a{
  font-size: 26rpx;
  color: #888;
}


