/* miniprogram/pages/person/person.wxss */
.person-page{
  display: flex;
  justify-content: center;
}
.top .icon{
  width: 38rpx;
  height: 38rpx;
  margin-right: -20rpx;
  margin-left: 25rpx;
}
.top .right{
  position: relative;
  right:80rpx;
  width: 26rpx;
  height: 26rpx;
}

.head{
  background-color:#fff;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 330rpx;
}

.top{
  display: flex;
  align-items: center;
  margin-top: 5rpx;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
  height: 100rpx;
}


.userinfo-avatar:after {
  border: none;
}
.member-info{
  flex: 0.8;
  margin-left: -40rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-content: space-around;
  position: relative;
  z-index: 20;
}
.member-info .nickname{
  display: flex;
}
.member-info .card-no{
  position: absolute;
  right: 100rpx;
  margin-top:16rpx;
  font-size: 38rpx;
  color: goldenrod;
}
.member-info .tel{
  font-size: 26rpx;
  color: #888;
}
.chathead{
  width: 100rpx;
  height: 100rpx;
  background-color: #eee;
  border-radius: 50%;
  overflow: hidden;
}
.head .save{
  padding-left: 70rpx;
  width: 100%;
  height: 60rpx;
  align-self: center;
  background-color: #bab9bb;
  background-color: goldenrod;
  line-height: 60rpx;
  font-size: 30rpx;
  color: white;
}
.head .bottom{
  display: flex;
  margin-top: 15rpx;
}
.head .bottom .item{
  flex: 1;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.head .bottom .item-2{
  flex: 1;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}
.head .bottom .title{
  font-size: 26rpx;
  color: #888;
}
.head .bottom .value{
  font-size: 40rpx;
  color: goldenrod;
}

.menu{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  width: 95%;
  background-color: #fff;
  border-radius: 15rpx;
}
.menu .item{
  display: flex;
  flex-direction: column;
  height: 101rpx;
}
.menu .item .top{
  height: 100rpx;
  display: flex;
  align-items: center;
}
.menu .item .top .left{
  margin-left: 40rpx;
  font-size: 30rpx;
  width: 170rpx;
}
.menu .item .top .right{
  position: absolute;
  margin-left: 220rpx;
  font-size: 30rpx;
  display: flex;
}
.menu .item .top .right .image{
  height: 40rpx;
  width: 40rpx;
  margin-left: 65rpx;
}
.menu .item .bottom{
  border-bottom:1rpx solid #eee;
  width: 90%;
  align-self: center;
}