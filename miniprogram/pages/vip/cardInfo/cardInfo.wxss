/* miniprogram/pages/vip/cardInfo/cardInfo.wxss */
page{
  background-color: white;
}
.card{
  display: flex;
  margin-top: 10%;
  flex-direction: column;
}
.card .top{
  align-self: center;
  height: 200px;
  margin-top: 20px;
  width: 80%;
  border-radius: 20rpx;
  overflow: hidden;
  position: fixed;
  z-index: 20;
}
.card .top .image{
  width: 100%;
  height: 100%;
}
.card .name{
  margin-top: 230px;
  align-self: center;
  font-size: 34rpx;
  position: fixed;
  z-index: 20;
  font-weight: bold;
}
.card .describle{
  margin-top: 260px;
  align-self: center;
  font-size: 28rpx;
  position: fixed;
  z-index: 20;
  color: #888888;
}
.buy_box {
  width: 100%;
  box-sizing: border-box;
  height: 75%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  overflow: hidden;
  box-shadow:0rpx 0rpx 6rpx 3rpx #c1c1c1;
  display: flex;
  justify-content: center;
}
.buy_box .info{
  position: absolute;
  bottom: 120px;
  width: 80%;
}
.buy_box .info .title {
  font-size: 36rpx;
  line-height: 60rpx;
  position: absolute;
  right: 0;
  display: flex;
}
.buy_box .info .title .price{
  border-bottom: 2rpx solid black;
  width: 180rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
}

.buy_box .info .btn{
  margin-top: 150rpx;
}